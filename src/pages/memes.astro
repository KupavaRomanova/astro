---
import Header from '../components/Header.astro';
import Layout from '../layout/Layout.astro';

const mem1 = '../../public/mem1.jpg';
const mem2 = '../../public/mem2.jpg';
const mem3 = '../../public/mem3.jpg';
const mem4 = '../../public/mem4.jpg';
const mem5 = '../../public/mem5.jpg';
const mem6 = '../../public/mem6.jpg';
const mem7 = '../../public/mem7.jpg';
---
<Layout>
	<!-- <h1>Мои любимые смешные картинки!</h1> -->

	<div class="flex flex-col justify-center items-center px-8 py-8 font-sans" >
		
		<div class="flex flex-col justify-center items-center mb-8 px-8  py-2 border-2 border-rose-800">
			<div class="w-full sm:w-1/2 text-center">
				<p class="font-mono text-2xl font-black">Люблю котиков и картинки с ними</p>
			</div>
			<div class="flex flex-col sm:flex-row sm:justify-start items-center">
				<img class=" py-2 w-full size-96 sm:w-1/2  mb-4 sm:mb-0 sm:m-8" src={mem1}/>
				<img class=" py-2 w-full size-96 sm:w-1/2  mb-4 sm:mb-0 sm:m-8" src={mem2}/>
			</div>
		</div>

		<div class="flex flex-col justify-center items-center mb-8 px-8 py-8 font-sans border-2 border-rose-800">
			<div class="w-full sm:w-1/2 text-center">
				<p class="font-mono text-2xl font-black">Шутки с вязанием и рисованием</p>
			</div>
			<div class="flex flex-col sm:flex-row sm:justify-start items-center">
				<img class=" py-2 w-full size-96 sm:w-1/2  mb-4 sm:mb-0 sm:m-8" src={mem3}/>
				<img class=" py-2 w-full size-96 sm:w-1/2  mb-4 sm:mb-0 sm:m-8" src={mem4}/>
			</div>
		</div>

		<div class="flex flex-col justify-center items-center mb-8 px-8 py-8 font-sans border-2 border-rose-800">
			<div class="w-full sm:w-1/2 text-center">
				<p class="font-mono text-2xl font-black">Самая жизненная картинка</p>
			</div>
			<img class=" py-2 6 sm:w-1/2  mb-4 sm:mb-0 sm:m-8" src={mem5}/>
		</div>

		<div class="flex flex-col  justify-center items-center mb-8 px-8 py-8 font-sans border-2 border-rose-800">
			<div class="w-full sm:w-1/2 text-center">
				<p class="font-mono text-2xl font-black">Эти картинки я вспоминала каждый раз перед сессией</p>
			</div>
			<div class="flex flex-col sm:flex-row sm:justify-start items-center">
				<img class=" py-2 w-full size-96 sm:w-1/2  mb-4 sm:mb-0 sm:m-8" src={mem7}/>
				<img class=" py-2 w-full size-96 sm:w-1/2  mb-4 sm:mb-0 sm:m-8" src={mem6}/>
			</div>
		</div>
	</div>


</Layout>

		

